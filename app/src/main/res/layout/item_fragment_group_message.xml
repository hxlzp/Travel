<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/round_image_fragment_group_message_item"
        app:riv_border_width="0dp"
        app:riv_corner_radius="100dp"
        style="@style/roundImageMessage"/>
    <TextView
        android:id="@+id/tv_fragment_group_message_name_item"
        android:layout_alignTop="@+id/round_image_fragment_group_message_item"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:textColor="@color/light_back"
        style="@style/textMessage"/>
    <TextView
        android:id="@+id/tv_fragment_group_message_mes_item"
        android:layout_alignBottom="@+id/round_image_fragment_group_message_item"
        android:textSize="12sp"
        style="@style/textMessage"/>
    <TextView
        android:id="@+id/tv_fragment_group_message_time_item"
        android:layout_alignTop="@+id/round_image_fragment_group_message_item"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        style="@style/both_wrap_style"/>
    <Button
        android:id="@+id/btn_fragment_group_item_delete"
        style="@style/groupDeleteBtn"/>
</RelativeLayout>