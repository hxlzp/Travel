<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lmatch_hwrap_style"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_mine_recycler_item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:src="@mipmap/ic_my_footprint"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/tv_mine_recycler_item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/iv_mine_recycler_item"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/ic_iv_mine_recycler_item_into"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:src="@mipmap/ic_arrow_gray_right"
        android:paddingRight="15dp"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/view_line"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/tv_mine_recycler_item"
        style="@style/line" />
    <View
        android:id="@+id/view_space"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lineColor"/>
</RelativeLayout>
