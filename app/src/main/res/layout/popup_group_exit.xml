<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/both_match_style"
    android:background="@color/popCityBackground">
    <LinearLayout
        style="@style/PopLinearStyle">
        <Button
            android:id="@+id/btn_popup_delete_group"
            android:text="@string/dissolveGroup"
            style="@style/popupSelectPicBtn"/>
        <View
            style="@style/line"/>
        <Button
            android:id="@+id/btn_popup_exit_group"
            android:text="@string/exitGroup"
            style="@style/popupSelectPicBtn"/>
        <View
            style="@style/line"/>
        <Button
            android:id="@+id/btn_popup_cancel"
            style="@style/popupSelectPicBtn"
            android:layout_marginTop="10dp"
            android:text="@string/cancel"/>
    </LinearLayout>
</RelativeLayout>