<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/popupWindow">
    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_margin="15dp"
        style="@style/lmatch_hwrap_style">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_dialog_map_user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/photo"
            android:scaleType="fitXY"
            app:riv_border_width="0dp"
            app:riv_corner_radius="100dp" />
        <TextView
            android:id="@+id/tv_dialog_map_user_name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_dialog_map_user_photo"
            style="@style/both_wrap_style"/>
        <ImageView
            android:id="@+id/iv_dialog_map_user_phone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_map_phone"
            android:padding="10dp"
            style="@style/both_wrap_style"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_user"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_dialog_map_user_distance"
            android:src="@mipmap/ic_map_popup_nearby"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            style="@style/both_wrap_style" />
        <TextView
            android:id="@+id/tv_dialog_map_user_distance"
            android:text="距我560米"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_dialog_map_user_distance"
            style="@style/both_wrap_style" />

    </RelativeLayout>
</RelativeLayout>